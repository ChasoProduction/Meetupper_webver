<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %></title>
    <%= render 'layouts/head' %>
  </head>
  <body>
    <%= render 'layouts/header' %>

    <main>
      <div class = 'container'>
        <% flash.each do |message_type, message| %>
          <div class = 'alert alert-<%= message_type %>'>
            <%= message %>
          </div>
        <% end %>
        <%= yield %>
      </div>
    </main>

  </body>
</html>
