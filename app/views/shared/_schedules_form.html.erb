<div class = 'row schedule-form'>
  <div class = 'col'>
    <%= form_for(@schedule) do |f| %>
      <% if flash[:error].present? %>
        <div id = 'error_explanation'>
          <div class = 'alert alert-danger'>
            These contain <%= pluralize(flash[:error].count, 'error') %>.
          </div>
          <ul>
            <% flash[:error].each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class = 'form-group row'>
        <%= f.label :content, '予定名', class:'col-md-2 col-form-label' %>
        <%= f.text_field :content, class:'form-control col-md-10' %>
      </div>

      <div class = 'form-group row'>
        <%= f.label :starts_at, '開始日時', class:'col-md-2 col-form-label' %>
        <%= f.datetime_select :starts_at, class:'form-control' %>
      </div>

      <div class = 'form-group row'>
        <%= f.label :ends_at, '終了日時', class:'col-md-2 col-form-label' %>
        <%= f.datetime_select :ends_at, class:'form-control' %>
      </div>

      <div class = 'form-group number-field row'>
        <%= f.label :importance, '重要度', class:'col-md-2 col-form-label' %>
        <%= f.number_field :importance, min:1, max:3, step:1 %>
      </div>

      <%= f.submit yield(:submit_message), class:'btn btn-primary' %>
    <% end %>
  </div>
</div>
